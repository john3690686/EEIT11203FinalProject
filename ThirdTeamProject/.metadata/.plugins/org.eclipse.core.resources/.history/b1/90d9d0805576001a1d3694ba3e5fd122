package tw.valckth.user.model;


import org.hibernate.Session;
import org.hibernate.SessionFactory;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.beans.factory.annotation.Qualifier;
import org.springframework.stereotype.Repository;

@Repository
public class ProfileDao {
	
	private SessionFactory sessionFactory;

	@Autowired
	public ProfileDao(@Qualifier(value = "sessionFactory") SessionFactory sessionFactory) {
		this.sessionFactory = sessionFactory;
	}
	
	public Profile insertProfile(Profile profile) {
		Session session = sessionFactory.getCurrentSession();
		Profile queryP = session.get(Profile.class, profile.getUserId());
		if(queryP==null) {
			session.save(profile);
			return profile;
		}else {
			return null;
		}
	}

	public boolean deleteProfile(String userId) {
		Session session = sessionFactory.getCurrentSession();
		Profile queryP = session.get(Profile.class, userId);
		if(queryP!=null) {
			session.delete(queryP);
			return true;
		}else {
			return false;
		}
	}

	public boolean updateProfile(Profile profile) {
		Session session = sessionFactory.getCurrentSession();
		Profile queryP = session.get(Profile.class, profile.getUserId());
		if(queryP!=null) {
			session.saveOrUpdate(profile);
			return true;
		}else {
			return false;
		}
	}

	public Profile queryProfile(String userId) {
		Session session = sessionFactory.getCurrentSession();
		Profile queryP = session.get(Profile.class, userId);
		if(queryP!=null) {
			return queryP;
		}else {
			return null;
		}
	}
}
