package tw.valckth.controller;

import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;

import tw.valckth.user.model.Profile;
import tw.valckth.user.model.ProfileService;

@Controller
public class ValckthController {
	
	@RequestMapping(path = "/insertProfile" , method = RequestMethod.GET)
	public void processAction() {
		ProfileService pservice = new ProfileService();
		Profile p = new Profile();
		p.setUserId("Maryid");
		p.setUserName("Mary");
		p.setUserPwd("mary");
		pservice.insert(p);
		System.out.println("insert");
	}
}
