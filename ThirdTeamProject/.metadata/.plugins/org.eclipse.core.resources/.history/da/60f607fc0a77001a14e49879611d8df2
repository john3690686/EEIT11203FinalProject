package tw.valckth.user.model;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

@Service
public class ProfileService {
	
	private p_ProfileDao profileDao;

	public ProfileService(){
	}
	
	@Autowired
	public ProfileService(p_ProfileDao profileDao){
		this.profileDao = profileDao;
	}
	
	public p_Profile insertProfile(p_Profile profile) {
		return profileDao.insertProfile(profile);
	}
	
	public p_Profile queryProfile(String userId) {
		return profileDao.queryProfile(userId);
	}
	
	public boolean updateProfile(p_Profile profile) {
		return profileDao.updateProfile(profile);
	}

}
